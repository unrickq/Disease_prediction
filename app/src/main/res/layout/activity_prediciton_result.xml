<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/padding"
    android:paddingRight="@dimen/padding"
    tools:context=".prediciton_result">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/margin_top"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:layout_marginTop="@dimen/margin_top_home_component"
                android:background="@drawable/background_list_custom"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/prediction_img_avatar"
                    android:layout_width="154dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:src="@drawable/background_avatar" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/margin_top"
                    android:layout_marginTop="@dimen/margin_top"
                    android:layout_marginBottom="@dimen/margin_top"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/prediction_txt_acc_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/prediction_txt_acc_name" />

                    <TextView
                        android:id="@+id/prediction_txt_acc_sex"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/prediction_txt_acc_sex" />

                    <TextView
                        android:id="@+id/prediction_txt_acc_phone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/prediction_txt_acc_phone" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:layout_marginTop="@dimen/margin_top_home_component"
                android:background="@drawable/background_list_custom"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/prediction_img_disease"
                    android:layout_width="61dp"
                    android:layout_height="36dp"
                    android:layout_marginLeft="@dimen/margin_top"
                    android:layout_marginTop="@dimen/margin_top"
                    android:layout_weight="1"
                    android:src="@drawable/ic_prediction_disease" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/margin_top"
                    android:layout_marginTop="@dimen/margin_top"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/prediction_txt_disease_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/prediction_txt_disease_title" />

                    <TextView
                        android:id="@+id/prediction_txt_disease_result"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/prediction_txt_disease_result" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:layout_marginTop="@dimen/margin_top_home_component"
                android:background="@drawable/background_list_custom"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/prediction_img_description"
                    android:layout_width="61dp"
                    android:layout_height="36dp"
                    android:layout_marginLeft="@dimen/margin_top"
                    android:layout_marginTop="@dimen/margin_top"
                    android:layout_weight="1"
                    android:src="@drawable/ic_prediction_disease_description" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/margin_top"
                    android:layout_marginTop="@dimen/margin_top"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/prediction_txt_disease_description_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/prediction_txt_disease_description_title" />

                    <TextView
                        android:id="@+id/prediction_txt_disease_description_result"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/prediction_txt_disease_description_result" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:layout_marginTop="@dimen/margin_top_home_component"
                android:background="@drawable/background_list_custom"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/prediction_img_symptom"
                    android:layout_width="61dp"
                    android:layout_height="31dp"
                    android:layout_marginLeft="@dimen/margin_top"
                    android:layout_marginTop="@dimen/margin_top"
                    android:layout_weight="1"
                    android:src="@drawable/ic_prediction_symptom" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/margin_top"
                    android:layout_marginTop="@dimen/margin_top"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/prediction_txt_symptom_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/prediction_txt_symptom_title" />

                    <TextView
                        android:id="@+id/prediction_txt_symptom_result"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/prediction_txt_symptom_result" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:layout_marginTop="@dimen/margin_top_home_component"
                android:background="@drawable/background_list_custom"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/prediction_img_medicine"
                    android:layout_width="61dp"
                    android:layout_height="31dp"
                    android:layout_marginLeft="@dimen/margin_top"
                    android:layout_marginTop="@dimen/margin_top"
                    android:layout_weight="1"
                    android:src="@drawable/ic_prediction_medicine" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/margin_top"
                    android:layout_marginTop="@dimen/margin_top"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/prediction_txt_medicine_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/prediction_txt_medicine_title" />

                    <TextView
                        android:id="@+id/prediction_txt_medicine_result"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/prediction_txt_medicine_result" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:layout_marginTop="@dimen/margin_top_home_component"
                android:background="@drawable/background_list_custom"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/prediction_img_advice"
                    android:layout_width="61dp"
                    android:layout_height="31dp"
                    android:layout_marginLeft="@dimen/margin_top"
                    android:layout_marginTop="@dimen/margin_top"
                    android:layout_weight="1"
                    android:src="@drawable/ic_prediction_advice" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/margin_top"
                    android:layout_marginTop="@dimen/margin_top"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/prediction_txt_advice_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/prediction_txt_advice_title" />

                    <TextView
                        android:id="@+id/prediction_txt_advice_result"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/prediction_txt_advice_result" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>