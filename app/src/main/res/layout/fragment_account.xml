<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="@dimen/padding"
    android:paddingRight="@dimen/padding"
    tools:context=".ui.account.AccountFragment">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/account_img_avatar"
        android:layout_width="141dp"
        android:layout_height="141dp"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/margin_top"
        android:src="@drawable/background_avatar" />

    <TextView
        android:id="@+id/account_txt_title_name"
        style="@style/subTitle_1_bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_top"
        android:text="@string/account_txt_title_name" />

    <TextView
        android:id="@+id/account_txt_name"
        style="@style/subTitle_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:text="@string/account_txt_name" />

    <EditText
        android:id="@+id/account_edit_txt_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/subTitle_1"
        android:ems="10"
        android:inputType="textPersonName"
        android:text=""
        android:visibility="gone" />

    <TextView
        android:id="@+id/account_txt_title_gender"
        style="@style/subTitle_1_bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_top"
        android:text="@string/account_txt_title_gender" />

    <Spinner
        android:id="@+id/account_spinner_gender"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


    <EditText
        android:id="@+id/account_edit_txt_gender"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/subTitle_1"
        android:ems="10"
        android:inputType="textPersonName"
        android:text=""
        android:visibility="gone" />

    <TextView
        android:id="@+id/account_txt_title_phone"
        style="@style/subTitle_1_bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/account_txt_title_phone" />

    <TextView
        android:id="@+id/account_txt_phone"
        style="@style/subTitle_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:text="@string/account_txt_phone" />

    <EditText
        android:id="@+id/account_edit_txt_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/subTitle_1"
        android:ems="10"
        android:inputType="number"
        android:text=""
        android:visibility="gone" />

    <TextView
        android:id="@+id/account_txt_title_email"
        style="@style/subTitle_1_bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_top"
        android:text="@string/account_txt_title_email" />

    <TextView
        android:id="@+id/account_txt_email"
        style="@style/subTitle_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:text="@string/account_txt_email" />

    <EditText
        android:id="@+id/account_edit_txt_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/subTitle_1"
        android:ems="10"
        android:inputType="textEmailAddress"
        android:text=""
        android:visibility="gone" />

    <TextView
        android:id="@+id/account_txt_title_address"
        style="@style/subTitle_1_bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_top"
        android:text="@string/account_txt_title_address" />

    <TextView
        android:id="@+id/account_txt_address"
        style="@style/subTitle_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:text="@string/account_txt_address" />

    <EditText
        android:id="@+id/account_edit_txt_address"
        style="@style/subTitle_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text=""
        android:visibility="gone" />

    <Button
        android:id="@+id/accout_btn_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_top"
        android:backgroundTint="@color/theme_1_P"
        android:text="@string/account_btn_edit"
        android:textColor="@color/background_B1_lightMode" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/accout_btn_edit_done"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/theme_1_P"
        android:text="@string/account_btn_edit_done"
        app:cornerRadius="@dimen/btn_corner_radius"
        android:layout_marginTop="@dimen/margin_top"
        android:textColor="@color/background_B1_lightMode"
        android:visibility="gone" />

</LinearLayout>