<?xml version="1.0" encoding="utf-8"?>
 <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingRight="@dimen/padding"
    android:paddingLeft="@dimen/padding"
    android:orientation="vertical"
    tools:context=".ui.account.AccountFragment">

    <!-- TODO: Update blank fragment layout -->
   <ImageView
       android:id="@+id/account_img_avatar"
       android:layout_width="141dp"
       android:layout_height="141dp"
       android:layout_marginTop="@dimen/margin_top"
       android:layout_gravity="center"
       android:src="@drawable/background_avatar" />

    <TextView
        android:id="@+id/account_txt_title_name"
        style="@style/subTitle_1_bold"
        android:layout_marginTop="@dimen/margin_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Name" />

    <TextView
        android:id="@+id/account_txt_name"
        style="@style/subTitle_1"
        android:layout_marginTop="3dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TextView" />

    <TextView
        android:id="@+id/account_txt_title_birthday"
        style="@style/subTitle_1_bold"
        android:layout_marginTop="@dimen/margin_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Birthday" />

    <TextView
        android:id="@+id/account_txt_birthday"
        style="@style/subTitle_1"
        android:layout_marginTop="3dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TextView" />

    <TextView
        android:id="@+id/account_txt_title_sex"
        style="@style/subTitle_1_bold"
        android:layout_marginTop="@dimen/margin_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sex" />

    <TextView
        android:id="@+id/account_txt_sex"
        style="@style/subTitle_1"
        android:layout_marginTop="3dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TextView" />

    <TextView
        android:id="@+id/account_txt_title_phone"
        style="@style/subTitle_1_bold"
        android:layout_marginTop="@dimen/margin_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Phone" />

    <TextView
        android:id="@+id/account_txt_phone"
        style="@style/subTitle_1"
        android:layout_marginTop="3dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TextView" />

</LinearLayout>