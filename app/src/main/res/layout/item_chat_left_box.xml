<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/item_chat_layout_show_message"
        android:layout_width="314dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:background="@drawable/background_chat_txt"
        android:orientation="vertical"
        android:padding="@dimen/margin_top">

        <TextView
            android:id="@+id/item_chat_show_message"
            android:layout_width="301dp"
            android:layout_height="45dp"
            android:gravity="left"
            android:text="Text predict" />

        <Button
            android:id="@+id/item_chat_box_button_predict"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            android:layout_x="27dp"
            android:layout_y="147dp"
            android:text="@string/chatbox_button_predict"
            android:textSize="10dp" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/item_chat_layout_checkbox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background_chat_txt"
        android:orientation="vertical"
        android:layout_marginTop="5dp"
        android:padding="@dimen/margin_top"
        android:visibility="gone">

        <ListView
            android:id="@+id/item_chat_checkbox"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:choiceMode="multipleChoice"
            tools:ignore="InvalidId" />

        <Button
            android:id="@+id/item_chat_checkbox_done"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="12dp"
            android:text="@string/item_chat_checkbox_done" />
    </LinearLayout>

    <TextView
        android:id="@+id/item_chat_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="@dimen/margin_top"
        android:gravity="left"
        android:paddingLeft="@dimen/margin_top"
        android:visibility="gone" />

</LinearLayout>