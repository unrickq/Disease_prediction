<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <!--        Placeholder-->
        <ImageView
            android:layout_width="32dp"
            android:layout_height="24dp"
            android:layout_marginEnd="@dimen/margin_top" />

        <TextView
            android:id="@+id/item_medicine_txt_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/margin_top"
            android:layout_weight=".60"
            android:textColor="@color/black"
            tools:text="@string/prediction_confirm_txt_medicine_name" />

        <TextView
            android:id="@+id/item_medicine_txt_dosage"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".40"
            android:textColor="@color/black"
            tools:text="@string/prediction_confirm_txt_medicine_dosage" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <!--        Placeholder-->
        <ImageView
            android:layout_width="32dp"
            android:layout_height="24dp"
            android:layout_marginEnd="@dimen/margin_top" />

        <TextView
            android:id="@+id/medicine_confirm_instruction_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            tools:text="@string/prediction_confirm_txt_medicine_instruction_title" />
    </LinearLayout>

    <View
        android:id="@+id/medicine_item_divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginStart="42dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="10dp"
        android:background="#E2E2E2" />

</LinearLayout>