<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="2dp"
    android:layout_marginEnd="2dp"
    android:layout_marginBottom="12dp">

    <TextView
        android:id="@+id/item_prediction_txt_month_day"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:paddingBottom="10dp"
        tools:text="@string/item_prediction_txt_month"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/item_prediction_txt_disease"
        style="@style/subTitle_1_medium"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        tools:text="@string/item_prediction_txt_disease"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/item_prediction_txt_month_day" />

    <TextView
        android:id="@+id/item_prediction_txt_status"
        style="@style/subTitle_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        tools:text="@string/item_prediction_txt_status"
        app:layout_constraintStart_toStartOf="@+id/item_prediction_txt_disease"
        app:layout_constraintTop_toBottomOf="@+id/item_prediction_txt_disease" />

    <View
        android:id="@+id/prediction_item_divider"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="16dp"
        android:background="#E2E2E2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/item_prediction_txt_disease"
        app:layout_constraintTop_toBottomOf="@id/item_prediction_txt_status" />

</androidx.constraintlayout.widget.ConstraintLayout>