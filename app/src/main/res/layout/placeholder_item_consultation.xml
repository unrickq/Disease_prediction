<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="16dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/item_consultation_img_main"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:background="@drawable/background_placeholder_avatar"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/item_prediction_txt_disease"
        style="@style/subTitle_1_medium"
        android:layout_width="0dp"
        android:layout_height="20dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/background_placeholder"
        app:layout_constraintStart_toEndOf="@+id/item_consultation_img_main"
        app:layout_constraintTop_toTopOf="@+id/item_consultation_img_main"
        app:layout_constraintWidth_max="wrap"
        app:layout_constraintWidth_percent="0.4" />

    <View
        android:id="@+id/item_prediction_txt_status"
        style="@style/subTitle_2"
        android:layout_width="0dp"
        android:layout_height="20dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/background_placeholder"
        app:layout_constraintStart_toStartOf="@+id/item_prediction_txt_disease"
        app:layout_constraintTop_toBottomOf="@+id/item_prediction_txt_disease"
        app:layout_constraintWidth_max="wrap"
        app:layout_constraintWidth_percent="0.7" />
</androidx.constraintlayout.widget.ConstraintLayout>