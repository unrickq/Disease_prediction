<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:contentInsetStart="0dp"
    android:contentInsetLeft="0dp"
    android:elevation="10dp"
    android:minHeight="?attr/actionBarSize">

    <ImageView
        android:id="@+id/chat_toolbar_img_pre"
        android:layout_width="35dp"
        android:layout_height="40dp"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_chat_back" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/chat_toolbar_img_avatar"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="25dp"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/chat_toolbar_img_pre"
        android:layout_toRightOf="@+id/chat_toolbar_img_pre"
        android:src="@drawable/background_avatar" />

    <TextView
        android:id="@+id/chat_toolbar_txt_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/chat_toolbar_img_avatar"
        android:layout_toRightOf="@+id/chat_toolbar_img_avatar"
        android:layout_marginLeft="@dimen/margin_top"
        android:text="TextView" />

    <ImageView
        android:id="@+id/chat_toolbar_img_hamburger"
        android:layout_width="35dp"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:rotationY="180"
        android:src="@drawable/ic_more" />

</RelativeLayout>