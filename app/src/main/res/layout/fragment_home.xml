<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingRight="@dimen/padding"
    android:paddingLeft="@dimen/padding"
    android:orientation="vertical"
    tools:context=".ui.home.HomeFragment">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/margin_top">

            <TextView
                android:id="@+id/txt_homeTitle"
                style="@style/heading_3_bold"
                android:layout_width="267dp"
                android:layout_height="wrap_content"
                android:text="What is your disease ?"
                android:textSize="36sp" />

            <SearchView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/margin_top_home_component"
                android:background="@drawable/background_searchview_custom" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="match_parent"
                android:layout_height="159dp"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/margin_top_home_component"
                android:background="@drawable/background_commercial"
                android:src="@drawable/ic_doctor" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_top_home_component"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txt_prediction_title"
                    style="@style/subTitle_1_bold"
                    android:layout_width="228dp"
                    android:layout_height="wrap_content"
                    android:text="Your disease" />

                <TextView
                    android:id="@+id/txt_prediction_see_more"
                    style="@style/subTitle_2_light"
                    android:layout_width="142dp"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:text="See more"
                    android:textColor="@color/theme_1_P" />
            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_view_disease"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/margin_top"
                tools:listitem="@layout/item_prediction" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txt_consultation_title"
                    style="@style/subTitle_1_bold"
                    android:layout_width="228dp"
                    android:layout_height="wrap_content"
                    android:text="Your consultation" />

                <TextView
                    android:id="@+id/txt_consultation_see_more"
                    style="@style/subTitle_2_light"
                    android:layout_width="142dp"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:text="See more"
                    android:textColor="@color/theme_1_P" />
            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_view_consultation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/margin_top"
                tools:listitem="@layout/item_consultation" />
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>