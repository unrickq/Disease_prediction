<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="12dp">

    <View
        android:id="@+id/item_prediction_txt_disease"
        style="@style/subTitle_1_medium"
        android:layout_width="0dp"
        android:layout_height="20dp"
        android:background="@drawable/background_placeholder"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_max="wrap"
        app:layout_constraintWidth_percent="0.5" />

    <View
        android:id="@+id/item_prediction_txt_status"
        style="@style/subTitle_2"
        android:layout_width="0dp"
        android:layout_height="20dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/background_placeholder"
        app:layout_constraintStart_toStartOf="@+id/item_prediction_txt_disease"
        app:layout_constraintTop_toBottomOf="@+id/item_prediction_txt_disease"
        app:layout_constraintWidth_max="wrap"
        app:layout_constraintWidth_percent="0.9" />

</androidx.constraintlayout.widget.ConstraintLayout>