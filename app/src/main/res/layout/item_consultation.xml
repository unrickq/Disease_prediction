<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="2dp"
    android:layout_marginEnd="2dp">


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/item_consultation_img_main"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/background_avatar"
            android:gravity="center"
            android:orientation="vertical"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/item_consultation_txt_name"
            style="@style/subTitle_1_bold"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="12dp"
            android:text="@string/item_consultation_txt_name"
            app:layout_constraintStart_toEndOf="@+id/item_consultation_img_main"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/item_consultation_txt_message"
            style="@style/subTitle_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:ellipsize="none"
            android:fadeScrollbars="false"
            android:requiresFadingEdge="horizontal"
            android:singleLine="true"
            android:text="@string/item_consultation_txt_message"
            app:layout_constraintStart_toEndOf="@+id/item_consultation_img_main"
            app:layout_constraintTop_toBottomOf="@+id/item_consultation_txt_name" />

        <TextView
            android:id="@+id/item_consultation_txt_time"
            style="@style/subTitle_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="@string/item_consultation_txt_time"
            app:layout_constraintStart_toEndOf="@+id/item_consultation_img_main"
            app:layout_constraintTop_toBottomOf="@+id/item_consultation_txt_message" />

