<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp">


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/item_consultation_img_main"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:background="@drawable/background_avatar"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/item_consultation_txt_name"
        style="@style/subTitle_1_bold"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:ellipsize="end"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/item_consultation_img_main"
        app:layout_constraintTop_toTopOf="@+id/item_consultation_img_main"
        tools:text="@string/item_consultation_txt_name" />

    <TextView
        android:id="@+id/item_consultation_txt_message"
        style="@style/subTitle_1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:ellipsize="end"
        android:fadeScrollbars="false"
        android:singleLine="true"
        app:layout_constraintEnd_toStartOf="@+id/item_consultation_txt_time"
        app:layout_constraintStart_toStartOf="@+id/item_consultation_txt_name"
        app:layout_constraintTop_toBottomOf="@+id/item_consultation_txt_name"
        tools:text="@string/item_consultation_txt_message" />

    <TextView
        android:id="@+id/item_consultation_txt_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/item_consultation_txt_message"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/item_consultation_txt_message"
        tools:text="@string/item_consultation_txt_time" />

